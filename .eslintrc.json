{
    "parser": "babel-eslint",
    "extends": [
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "no-console": "off"
    },
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "ecmaVersion": 2020,
          "sourceType": "module",
          "ecmaFeatures": {
            "jsx": true
          }
        },
        "extends": [
          "plugin:react/recommended",
          "plugin:prettier/recommended"
        ],
        "rules": {
          "react/prop-types": "off",
          "@typescript-eslint/naming-convention": [
            "error",
            {
              "selector": "interface",
              "format": ["PascalCase"],
              "custom": {
                "regex": "^I[A-Z]",
                "match": false
              }
            }
          ]
        }
      }
    ]
  }
  